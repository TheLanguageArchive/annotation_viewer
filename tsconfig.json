{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "paths": {
      "@fav/*": ["./src/*"],
      "@fav-components/*": ["./src/app/components/*"],
      "@fav-models/*": ["./src/app/models/*"],
      "@fav-services/*": ["./src/app/services/*"],
      "@fav-stores/*": ["./src/app/stores/*"],
      "@fav-specs/*": ["./src/app/specs/*"],
      "@fav-styles/*": ["./src/app/styles/*"],
      "@fav-views/*": ["./src/app/views/*"],
    },
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
